<h2>Lista de Categorias</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>
{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small>
            <br>
            <small>Data de criação: {{date}}</small><br>
            <a href="/admin/categorias/edit/{{_id}}"><button class="shadow p-3 btn btn-outline-primary mt-3">Editar categoria</button></a>
            <br>
            <form action="/admin/categorias/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="sshadow p-3 btn btn-outline-danger mt-3">Deletar Categoria</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma Categoria Registrada</h4>
{{/each}}


