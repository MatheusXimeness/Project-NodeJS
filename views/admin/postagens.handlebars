<h2>Lista de Postagens</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova Postagem</button></a><br>
{{#each postagens}}
    <div class="card mt-3">
        <div class="card-body mt-3">
            <h4>Título: {{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Data: {{data}}</small><br>
            <small>Categoria: {{categoria.nome}}</small><br>
            <a href="/admin/postagens/edit/{{_id}}"><button class="shadow p-3 btn btn-outline-primary mt-3">Editar postagem</button></a><br>
            <a href="/admin/postagens/deletar/{{_id}}"><button class="sshadow p-3 btn btn-outline-danger mt-3">Deletar postagem</button></a>
        </div>
    </div>
{{else}}
    <p>Nenhuma postagem registrada</p>
{{/each}}